{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~api": ["src/api"],
      "~assets/*": ["src/assets/*"],
      "~components": ["src/components"],
      "~context": ["src/context"],
      "~features/*": ["src/features/*"],
      "~hooks": ["src/hooks"],
      "~themes": ["src/themes"]
    }
  }
}
